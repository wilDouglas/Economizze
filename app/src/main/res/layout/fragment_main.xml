<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view001"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginTop="20sp"
            card_view:cardCornerRadius="3dp"
            card_view:cardBackgroundColor="@color/verde_escuro">

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/titleSaldoAtual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Saldo Atual:"
                android:textColor="@color/branco"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/main_fragment_valor_atual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/titleSaldoAtual"
                android:layout_marginLeft="20sp"
                android:text="R$ 500,00"
                android:textColor="@color/branco"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view002"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginTop="20sp"
            card_view:cardCornerRadius="3dp"
            card_view:cardBackgroundColor="@color/vermelho_escuro">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/titleDespesaVencida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Despesas Vencidas:"
                    android:textColor="@color/branco"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/main_fragment_despesa_vencida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/titleDespesaVencida"
                    android:layout_marginLeft="20sp"
                    android:text="R$ 500,00"
                    android:textColor="@color/branco"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>